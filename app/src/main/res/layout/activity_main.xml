    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/frame_layout_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:id="@+id/tab_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_main_padding_top"
            android:paddingBottom="@dimen/activity_main_padding_top">
            <ImageButton
                android:id="@+id/tab1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/activity_main_tab_linearlayout_height"
                android:background="@drawable/tab_name1"/>
            <ImageButton
                android:id="@+id/tab2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/activity_main_tab_linearlayout_height"
                android:background="@drawable/tab_name2"/>
            <ImageButton
                android:id="@+id/tab3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/activity_main_tab_linearlayout_height"
                android:background="@drawable/tab_name3"/>
        </LinearLayout>
    </LinearLayout>

